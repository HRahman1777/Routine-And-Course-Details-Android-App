<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/gradiant_background2"
    tools:context=".LogIn">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Log In"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:drawableTop="@drawable/login_logo2"
        android:layout_marginBottom="60dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <EditText
            android:id="@+id/usernameEditTxtId"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="name"
            android:textColorHint="#000"
            android:textColor="#FDD214"
            android:textStyle="italic"
            android:gravity="center"
            android:background="#685A5353"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            />
        <EditText
            android:id="@+id/passwordEditTxtId"
            android:layout_marginTop="8dp"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="password"
            android:textColorHint="#000"
            android:textColor="#FDD214"
            android:textStyle="italic"
            android:background="#685A5353"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_security_black_24dp"
            android:inputType="textPassword"
            />
    </LinearLayout>

    <Button
        android:id="@+id/loginBtnId"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="LogIn"
        android:textStyle="italic"
        android:textColor="#000000"
        android:textSize="18dp"
        android:background="@drawable/button_bkgrdlogin"
        android:textAllCaps="false"
        />

</LinearLayout>